<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <%= render 'layouts/error_message', obj: @book %>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class:"form-control title" %>
        </div>
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class:"form-control body" %>
        </div>
        <div class="form-group">
          <%= f.submit class:"btn btn-success" %>
        </div>
      <% end %>
      <div class="mt-2">
        <span><%= link_to 'Show', book_path(@book.id) %></span>
        <span> | </span>
        <span><%= link_to 'Back', books_path %></span>
      </div>
    </div>
  </div>
</div>