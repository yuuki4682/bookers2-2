<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
    <tr>
      <td>
        <%= link_to (user_path(book.user_id)) do %>
        <%= image_tag book.user.get_profile_image(100,100) %></br>
        <%= book.user.name %>
        <% end %>
      </td>
      <td>
        <%= link_to (book_path(book.id)) do %>
        <%= book.title %>
        <% end %>
      </td>
      <td><%= book.body %></td>
    <% end %>  
    </tr>
  </tbody>
</table>