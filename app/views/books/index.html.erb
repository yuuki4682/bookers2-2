<div class="container px-5 px-sm-0">
  <%= flash[:notice] %>
  <div class="row ">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      
      <h2>New book</h2>
      <%= render 'layouts/error_message', obj: @book %>
      <%= render 'form', book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <%= render 'index', books: @books %>
    </div>
    
  </div>
</div>