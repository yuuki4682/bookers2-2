<div>
  <%= form_with model: book do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class:"form-control title" %>
    </div>
    <div class="form-group">
      <%= f.label :opinion %>
      <%= f.text_area :body, class:"form-control body" %>
    </div>
    <div class="form-group">
      <%= f.submit class:"btn btn-success" %>
    </div>
  <% end %>
</div>