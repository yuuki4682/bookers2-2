<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= render 'layouts/error_message', obj: @user %>
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class:"form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :profile_image, accept: 'image/*', class:"form-control-file user_image" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction %>
          <%= f.text_area :introduction, class:"form-control introduction", rows: 4 %>
        </div>
        <div class="form-group">
          <%= f.submit class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>